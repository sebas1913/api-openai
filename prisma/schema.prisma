datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}

model Query {
  id        Int      @id @default(autoincrement())  // Identificador único
  question  String   @db.VarChar(255)  // Pregunta con longitud máxima de 255 caracteres
  answer    String?  @db.Text  // Respuesta (opcional) con longitud máxima de 5000 caracteres
  createdAt DateTime @default(now())  // Fecha de creación con valor por defecto de la hora actual
}
